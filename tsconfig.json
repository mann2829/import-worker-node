{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  